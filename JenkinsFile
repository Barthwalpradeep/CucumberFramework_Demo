pipeline{
    
    agent any
    
    stages{
        
        stage("Build"){
            steps{
                echo("Building") 
            }
        }
        
        stage("deploy to dev"){
            steps{
                echo("deploy to dev") 
            }
        }
        
         stage("deploy to qa"){
            steps{
                echo("deploy to qa") 
            }
        }
        
         stage("regression test on qa"){
            steps{
                echo("regression test on qa") 
            }
        }
        
         stage("deploy to stage"){
            steps{
                echo("deploy to stage") 
            }
        }
        
         stage("sanity test"){
            steps{
            sh 'mvn test -Dcucumber.filter.tags="@AddPlace"' 
            }
            post {
                success {
                    junit 'target/surefire-reports/**/*.xml' 
                }
        }
        
       }
        
        
        
    }
    
}
